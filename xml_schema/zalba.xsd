<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
    targetNamespace="https://github.com/draganagrbic998/xml/zalba"
    xmlns:obavestenje="https://github.com/draganagrbic998/xml/obavestenje"
    xmlns:odbijanje="https://github.com/draganagrbic998/xml/odbijanje"
    xmlns:zahtev="https://github.com/draganagrbic998/xml/zahtev"
    xmlns:zalba="https://github.com/draganagrbic998/xml/zalba">
    <xs:import namespace="https://github.com/draganagrbic998/xml/zahtev" schemaLocation="zahtev.xsd"/>
    <xs:import namespace="https://github.com/draganagrbic998/xml/obavestenje"
        schemaLocation="obavestenje.xsd"/>
    <xs:import namespace="https://github.com/draganagrbic998/xml/odbijanje"
        schemaLocation="odbijanje.xsd"/>
    <xs:element name="Zahtev">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Opis" type="xs:string"/>
                <xs:element ref="zahtev:Zahtev"/>
                <xs:choice minOccurs="0">
                    <xs:element ref="obavestenje:Obavestenje"/>
                    <xs:element ref="odbijanje:Odbijanje"/>
                </xs:choice>
            </xs:sequence>
            <xs:attribute name="broj" type="xs:positiveInteger"/>
            <xs:attribute name="datum" type="xs:date"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
